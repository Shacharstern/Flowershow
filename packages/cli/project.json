{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "cache": true,
        "fix": true,
        "lintFilePatterns": [
          "packages/cli/**/*.js"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/cli/jest.config.js",
        "passWithNoTests": true
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install --prefix packages/cli"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "packages/cli/src/e2e/bats/bin/bats packages/cli/src/e2e/test.bats --verbose-run"
      },
      "inputs": [
        "production", {"env": "NETLIFY_TOKEN"}
      ],
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": [
        { "projects": "self", "target": "install" }
      ]
    }
  },
  "tags": []
}
